<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ButtonAlarmActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1から順番に押せ"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_nine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="3"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_nine4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="6"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_nine7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_nine9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="30sp"
                android:paddingTop="30sp"
                android:text="9"
                android:textSize="30sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>